// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum ProjectRole {
  OWNER
  MEMBER
}

enum TaskRole {
  PRIMARY    // Vai trò chính
  SECONDARY  // Cộng sự
}

enum TaskStatus {
  NOT_STARTED  // Chưa bắt đầu
  IN_PROGRESS  // Đang xử lý
  COMPLETED    // Đã hoàn thành
  CANCELLED    // Đã hủy
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ActivityAction {
  // Project actions
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_DELETED
  MEMBER_ADDED
  MEMBER_REMOVED
  MEMBER_ROLE_CHANGED
  
  // Task actions
  TASK_CREATED
  TASK_UPDATED
  TASK_DELETED
  TASK_STATUS_CHANGED
  TASK_MEMBER_ADDED
  TASK_MEMBER_REMOVED
  TASK_MEMBER_ROLE_CHANGED
  SUBTASK_CREATED
  
  // Comment actions
  COMMENT_ADDED
}

// ==================== MODELS ====================

/// Bảng User - Lưu thông tin người dùng
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  avatar        String?
  supabaseId    String?   @unique @map("supabase_id")  // ID từ Supabase Auth
  password      String?   // Null nếu dùng OAuth
  isActive      Boolean   @default(true) @map("is_active")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  projectMembers  ProjectMember[]
  taskMembers     TaskMember[]
  createdTasks    Task[]          @relation("TaskCreator")
  activityLogs    ActivityLog[]

  @@map("users")
}

/// Bảng Project - Lưu thông tin dự án
model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  color       String?   @default("#3b82f6")  // Màu hiển thị
  isArchived  Boolean   @default(false) @map("is_archived")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  members       ProjectMember[]
  tasks         Task[]
  activityLogs  ActivityLog[]

  @@map("projects")
}

/// Bảng Project Member - Gắn user với project và role
model ProjectMember {
  id        String      @id @default(cuid())
  userId    String      @map("user_id")
  projectId String      @map("project_id")
  role      ProjectRole @default(MEMBER)
  joinedAt  DateTime    @default(now()) @map("joined_at")

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@map("project_members")
}

/// Bảng Task - Hỗ trợ task và subtask qua parent_id
model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  status      TaskStatus   @default(NOT_STARTED)
  priority    TaskPriority @default(MEDIUM)
  startDate   DateTime?    @map("start_date")
  endDate     DateTime?    @map("end_date")
  position    Int          @default(0)  // Thứ tự hiển thị
  
  // Foreign keys
  projectId   String       @map("project_id")
  parentId    String?      @map("parent_id")  // Null = task chính, có giá trị = subtask
  creatorId   String       @map("creator_id")
  
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  // Relations
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parent      Task?        @relation("TaskSubtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks    Task[]       @relation("TaskSubtasks")
  creator     User         @relation("TaskCreator", fields: [creatorId], references: [id])
  members     TaskMember[]
  activityLogs ActivityLog[]

  @@index([projectId])
  @@index([parentId])
  @@index([creatorId])
  @@index([status])
  @@map("tasks")
}

/// Bảng Task Member - Gán cộng sự và vai trò cho task
model TaskMember {
  id        String    @id @default(cuid())
  taskId    String    @map("task_id")
  userId    String    @map("user_id")
  role      TaskRole  @default(SECONDARY)
  assignedAt DateTime @default(now()) @map("assigned_at")

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_members")
}

/// Bảng Activity Log - Ghi lại hành động của người dùng
model ActivityLog {
  id          String         @id @default(cuid())
  action      ActivityAction
  description String?
  metadata    Json?          // JSONB để lưu thông tin bổ sung
  
  // Foreign keys
  userId      String         @map("user_id")
  projectId   String         @map("project_id")
  taskId      String?        @map("task_id")
  
  createdAt   DateTime       @default(now()) @map("created_at")

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  task    Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([projectId])
  @@index([taskId])
  @@index([createdAt])
  @@map("activity_logs")
}
